<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_refused_validation_form" model="ir.ui.view">
        <field name="model">product.refused.validation</field>
        <field name="arch" type="xml">
            <form string="Refused">
                <group>
                    <field name="product_id" invisible="1"/>
                    <field name="reason" placeholder="Provide a reason for refusal" string="Reason"/>
                </group>
                <footer>
                    <button name="action_refused_product_request" type="object" class="btn-primary" string="Refuse"/>
                    <button special="cancel" string="Canceled" close="1"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
